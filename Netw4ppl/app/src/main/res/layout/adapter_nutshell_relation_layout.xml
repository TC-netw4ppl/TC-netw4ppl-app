<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <!-- ID Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_person_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:gravity="center"
            android:text="AAA-000000"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/full_name_person_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:gravity="center"
            android:text="Zorglub"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Infos Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/relation_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Travelled With"
            android:textSize="20sp"
            android:textAlignment="center" />

    </LinearLayout>

        <!-- Age and Sex layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_person_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:gravity="center"
            android:text="AAA-000000"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/full_name_person_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:gravity="center"
            android:text="Zorglub"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>